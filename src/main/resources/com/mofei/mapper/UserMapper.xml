<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mofei.dao.UserDao">
	<select id="loadUserByUserName" parameterType="String" resultType="UsersInfo">
		select * from users where username=#{username}
	</select>

	<select id="getRolesByUID" parameterType="Integer" resultType="RoleInfo">
		select r.* from role r JOIN userrole ur on r.id=ur.rid where r.id=#{uid}
	</select>

	<update id="updatePassword">
		update users set password=#{password} where username=#{username}
	</update>
</mapper>